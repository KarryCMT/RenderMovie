/* pages/posts/posts.wxss */

swiper {
  width: 100%;
  height: 600rpx;
}

.swiper_img {
  width: 100%;
  height: 600rpx;
}

.post_container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 10rpx;
}

.post_author_date {
  /* margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 10rpx; */
  margin: 10rpx 0 20rpx 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.post_author {
  height: 60rpx;
  width: 60rpx;
  vertical-align: middle;
}

.post_date {
  margin-left: 20rpx;
  vertical-align: middlel;
  font-size: 26rpx;
}
.post_title{
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 10px;
  margin-left: 10rpx;
  color: #333;
}

.post_image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}
.post_content{
  font-size: 28rpx;
  color: #666;
  letter-spacing: 2rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}
.post_like{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  margin-left: 20rpx;

}
.post_like_image{
  height: 32rpx;
  width: 32rpx;
  margin-right: 16rpx;

}
.post_like_font{
  margin-right: 40rpx;
}