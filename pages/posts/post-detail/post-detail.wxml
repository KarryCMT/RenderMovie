<view class="container">
  <image class="head_image" src="{{postList.headImgSrc}}"></image>
  <image class="audio" src="../../../images/music/music-start.png"></image>
  <view class="author_data">
    <image class="avatar" src="{{postList.avatar}}"></image>
    <text class="author">{{postList.author}}</text>
    <text class="const_text">发表于</text>
    <text class="date">{{postList.dateTime}}</text>
  </view>
  <text class="title">{{postList.title}}</text>
  <view class="tool">
    <view class="circle_image">
      <image src="../../../images/icon/collection.png"></image>
      <image class="share_image" src="../../../images/icon/share.png"></image>
    </view>
    <view class="horizon"></view>
  </view>
  <text class="detail">{{postList.detail}}</text>
</view>